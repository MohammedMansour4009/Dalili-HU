<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaliliHU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>


    </style>

    <style name="AppTheme.Button" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="EditText" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:minHeight">30dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="elevation">8dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
    </style>
    <style name="EditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/primary_variant</item>
        <item name="hintTextColor">@color/hint_color</item>
    </style>
    <style name="createPostButtonStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">60dp</item>
        <item name="colorOnBackground">@color/secondary_variant</item>
    </style>
</resources>